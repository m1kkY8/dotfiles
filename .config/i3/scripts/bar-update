#!/usr/bin/env bash

while true; do
    update_count=$(/usr/bin/checkupdates | wc -l)
    
    if [ "$update_count" -gt 0 ]; then
        echo "You have $update_count new update/s"
        sleep 30 
    elif [ "$update_count" -gt 25 ]; then
        echo "You have more than 25 updates" 
        sleep 30 
    elif [ "$update_count" -gt 50 ]; then
        echo "You have more than 50 updates, update now" 
        sleep 30
    else
        echo "No new updates"
        sleep 1800

    fi
done
